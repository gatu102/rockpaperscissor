import random

def rock_paper_scissors():
    print("ðŸŽ® Welcome to Rock Paper Scissors Showdown!")
    print("Choices: rock, paper, scissors")
    
    choices = ["rock", "paper", "scissors"]

    while True:
        player = input("\nEnter your choice: ").lower()
        if player not in choices:
            print("Invalid choice. Choose rock, paper, or scissors.")
            continue

        computer = random.choice(choices)
        print(f"Computer chose: {computer}")

        if player == computer:
            print("It's a tie!")
        elif (player == "rock" and computer == "scissors") or \
             (player == "paper" and computer == "rock") or \
             (player == "scissors" and computer == "paper"):
            print("ðŸŽ‰ You win!")
        else:
            print("ðŸ’€ You lose!")

        again = input("Play again? (y/n): ").lower()
        if again != "y":
            print("Thanks for playing Rock Paper Scissors Showdown!")
            break

if __name__ == "__main__":
    rock_paper_scissors()
